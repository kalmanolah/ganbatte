<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <title>{% if page_title is defined %}{{ page_title }}{% endif %}{% if page_title is defined and app.config.site.name is defined %} &middot; {% endif %}{% if app.config.site.name is defined %}{{ app.config.site.name }}{% endif %}</title>

    {% if app.config.site.description is defined -%}
    <meta name="description" content="{{ app.config.site.description }}">
    {%- endif %}

    {% if app.config.site.author is defined -%}
    <meta name="author" content="{{ app.config.site.author }}">
    {%- endif %}

    {% if app.config.site.keywords is defined -%}
    <meta name="keywords" content="{{ app.config.site.keywords }}">
    {% endif %}

    {% block stylesheets -%}
    <link href="{{ app.request.baseUrl }}/assets/normalize.css/css/min-normalize.css" rel="stylesheet">
    <link href="{{ app.request.baseUrl }}/assets/font-awesome/css/min-font-awesome.css" rel="stylesheet">
    <link href="{{ app.request.baseUrl }}/css/min-layout.css" rel="stylesheet">
    {%- endblock %}

</head>
<body>
{% block body %}{% endblock %}
<script>
    app = {
        basepath: '{{ app.request.baseUrl }}/'
    };
</script>
{% block javascripts %}
<script src="{{ app.request.baseUrl }}/assets/jquery/js/min-jquery.js"></script>
<script src="{{ app.request.baseUrl }}/assets/jquery-cookie/js/min-jquery.cookie.js"></script>
<script src="{{ app.request.baseUrl }}/assets/beyond.js/js/min-beyond.js"></script>
<script src="{{ app.request.baseUrl }}/assets/underscore.js/js/min-underscore.js"></script>
<script src="{{ app.request.baseUrl }}/assets/backbone.js/js/min-backbone.js"></script>
<script src="{{ app.request.baseUrl }}/js/min-main.js"></script>
{% endblock %}
{% block scripts %}{% endblock %}
</body>
</html>
